        <set href="#text" attributeName="text-buffer" to="+" />       
      </use>
      
      <text id="totalScore" x="50%-52" y="$+5" width="100%" font-weight="bold" font-size="25">Total: 000</text>
      
      <line id="bottomLine" x1="0" y1="$-20" x2="101%" y2="$-20" stroke-width="1" /> 
