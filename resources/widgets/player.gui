      <use id="btnDown" href="#square-button" x="1" y="5" width="22%" height="80">
        <set href="#text" attributeName="text-buffer" to="-" />
      </use>
            
      <text id="name" x="93" y="55" width="90" font-size="37" font-weight="bold">Player 1</text>    
      <text id="score" x="187" y="55" width="60" font-size="37" font-weight="bold">000</text>
                              
